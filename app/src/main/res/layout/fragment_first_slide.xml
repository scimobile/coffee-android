<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".feature.onboarding.ui.screen.FirstSlideFragment">

    <TextView
        android:id="@+id/tv_header_first_slide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginHorizontal="@dimen/margin_medium_x_23"
        android:layout_marginTop="@dimen/margin_xxlarge"
        android:fontFamily="@font/poppins_bold"
        android:text="@string/first_slide_header"
        android:textColor="@color/color_onboarding_text"
        android:textSize="@dimen/text_heading_1x" />

    <ImageView
        android:id="@+id/iv_first_slide"
        android:layout_width="wrap_content"
        android:layout_height="280dp"
        android:layout_below="@id/tv_header_first_slide"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="3dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="-3dp"
        android:src="@drawable/coffee_onboarding_first_slide" />

    <TextView
        android:id="@+id/tv_description_first_slide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_first_slide"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginHorizontal="@dimen/margin_medium_x_23"
        android:layout_marginTop="@dimen/margin_xxxxlarge"
        android:fontFamily="@font/poppins_regular"
        android:text="@string/onboarding_first_slide_description"
        android:textColor="@color/color_onboarding_text"
        android:textSize="@dimen/text_regular_2x" />

</RelativeLayout>