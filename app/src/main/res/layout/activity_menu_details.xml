<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".feature.menudetails.ui.screen.MenuDetailsActivity">


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:background="@color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_tool_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:collapsedTitleTextAppearance="@style/TextAppearance.Poppins.Medium.Bold"
            app:contentScrim="@color/white"
            app:expandedTitleMarginStart="@dimen/margin_medium_x_12"
            app:expandedTitleTextAppearance="@style/TextAppearance.Poppins.Medium.Bold"
            app:layout_scrollFlags="scroll|snap|exitUntilCollapsed"
            app:title="Vanilla Latte">

            <ImageView
                android:id="@+id/iv_coffee_detail"
                android:layout_width="320dp"
                android:layout_height="260dp"
                android:layout_gravity="center"
                android:contentDescription="@string/coffee_detail_image"
                android:scaleType="centerCrop"
                tools:src="@tools:sample/backgrounds/scenic"
                app:layout_collapseMode="parallax" />

            <Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/transparent"
                app:layout_collapseMode="pin">

                <ImageView
                    android:id="@+id/btn_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center_vertical"
                    android:layout_marginHorizontal="@dimen/margin_medium_x_12"
                    android:layout_marginTop="@dimen/margin_medium_x_12"
                    android:background="@drawable/shape_btn_back"
                    android:contentDescription="@string/back"
                    android:paddingVertical="3dp"
                    android:paddingStart="3dp"
                    android:paddingEnd="4dp"
                    android:src="@drawable/ic_back"
                    app:tint="@color/white" />

                <ImageView
                    android:id="@+id/btn_fav"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginHorizontal="@dimen/margin_medium_x_12"
                    android:layout_marginTop="@dimen/margin_medium_x_12"
                    android:contentDescription="@string/favourite"
                    android:padding="6dp"
                    android:src="@drawable/ic_fav"
                    app:tint="@color/color_coffee_brown" />

            </Toolbar>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="70dp"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/app_bar_layout">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/margin_medium_x_12">

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:text="@string/price"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_description_header"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/poppins_regular"
                android:text="@string/description_header"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_price" />

            <TextView
                android:id="@+id/tv_detail_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium_x_12"
                android:fontFamily="@font/poppins_regular"
                android:text="@string/detail_description"
                android:textColor="@color/color_secondary_text"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_description_header" />

            <TextView
                android:id="@+id/tv_size"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium_x_16"
                android:fontFamily="@font/poppins_bold"
                android:text="@string/size"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_detail_description" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_group_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium_x_12"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintEnd_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_size"
                app:singleSelection="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/btn_chip_small"
                    style="@style/CustomChipStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:checked="true"
                    android:elevation="4dp"
                    android:fontFamily="@font/poppins_regular"
                    android:padding="6dp"
                    android:text="Small"
                    app:checkedIcon="@drawable/ic_cup"
                    app:checkedIconEnabled="true"
                    app:checkedIconTint="@color/white"
                    app:chipCornerRadius="@dimen/margin_medium_x_12"
                    app:chipIcon="@drawable/ic_cup"
                    app:chipIconTint="@color/color_coffee_brown"
                    app:chipStrokeColor="@color/white"
                    app:chipStrokeWidth="0.2dp"
                    tools:ignore="HardcodedText" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/btn_chip_medium"
                    style="@style/CustomChipStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:elevation="4dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Medium"
                    app:checkedIcon="@drawable/ic_cup"
                    app:checkedIconEnabled="true"
                    app:checkedIconTint="@color/white"
                    app:chipCornerRadius="@dimen/margin_medium_x_12"
                    app:chipIcon="@drawable/ic_cup"
                    app:chipIconTint="@color/color_coffee_brown"
                    app:chipStrokeColor="@color/white"
                    app:chipStrokeWidth="0.2dp"
                    tools:ignore="HardcodedText" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/btn_radio_large"
                    style="@style/CustomChipStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:elevation="4dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Large"
                    app:checkedIcon="@drawable/ic_cup"
                    app:checkedIconEnabled="true"
                    app:checkedIconTint="@color/white"
                    app:chipCornerRadius="@dimen/margin_medium_x_12"
                    app:chipIcon="@drawable/ic_cup"
                    app:chipIconTint="@color/color_coffee_brown"
                    app:chipStrokeColor="@color/white"
                    app:chipStrokeWidth="0.2dp"
                    tools:ignore="HardcodedText" />

            </com.google.android.material.chip.ChipGroup>

            <TextView
                android:id="@+id/tv_variation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium_x_16"
                android:fontFamily="@font/poppins_bold"
                android:text="@string/variation"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/chip_group_size" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_group_variation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium_x_12"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintEnd_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_variation"
                app:singleSelection="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/btn_radio_hot"
                    style="@style/CustomChipStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:checked="true"
                    android:elevation="4dp"
                    android:fontFamily="@font/poppins_regular"
                    android:padding="6dp"
                    android:text="Hot"
                    app:checkedIcon="@drawable/ic_hot"
                    app:checkedIconEnabled="true"
                    app:checkedIconTint="@color/white"
                    app:chipCornerRadius="@dimen/margin_medium_x_12"
                    app:chipIcon="@drawable/ic_hot"
                    app:chipIconTint="@color/color_coffee_brown"
                    app:chipStrokeColor="@color/white"
                    app:chipStrokeWidth="0.2dp"
                    tools:ignore="HardcodedText" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/btn_radio_cold"
                    style="@style/CustomChipStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:elevation="4dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Cold"
                    app:checkedIcon="@drawable/ic_cold"
                    app:checkedIconEnabled="true"
                    app:checkedIconTint="@color/white"
                    app:chipCornerRadius="@dimen/margin_medium_x_12"
                    app:chipIcon="@drawable/ic_cold"
                    app:chipIconTint="@color/color_coffee_brown"
                    app:chipStrokeColor="@color/white"
                    app:chipStrokeWidth="0.2dp"
                    tools:ignore="HardcodedText" />

            </com.google.android.material.chip.ChipGroup>

            <TextView
                android:id="@+id/tv_sugar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium_x_16"
                android:fontFamily="@font/poppins_bold"
                android:text="@string/sugar"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/chip_group_variation" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_group_sugar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium_x_12"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintEnd_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_sugar"
                app:singleSelection="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/btn_chip_sugar_none"
                    style="@style/CustomChipStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:checked="true"
                    android:elevation="4dp"
                    android:fontFamily="@font/poppins_regular"
                    android:padding="6dp"
                    android:text="None"
                    app:checkedIcon="@drawable/ic_sugar"
                    app:checkedIconEnabled="true"
                    app:checkedIconTint="@color/white"
                    app:chipCornerRadius="@dimen/margin_medium_x_12"
                    app:chipIcon="@drawable/ic_sugar"
                    app:chipIconTint="@color/color_coffee_brown"
                    app:chipStrokeColor="@color/white"
                    app:chipStrokeWidth="0.2dp"
                    tools:ignore="HardcodedText" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/btn_chip_sugar_30percent"
                    style="@style/CustomChipStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:elevation="4dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="30%"
                    app:checkedIcon="@drawable/ic_sugar"
                    app:checkedIconEnabled="true"
                    app:checkedIconTint="@color/white"
                    app:chipCornerRadius="@dimen/margin_medium_x_12"
                    app:chipIcon="@drawable/ic_sugar"
                    app:chipIconTint="@color/color_coffee_brown"
                    app:chipStrokeColor="@color/white"
                    app:chipStrokeWidth="0.2dp"
                    tools:ignore="HardcodedText" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/btn_radio_sugar_50percent"
                    style="@style/CustomChipStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:elevation="4dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="50%"
                    app:checkedIcon="@drawable/ic_sugar"
                    app:checkedIconEnabled="true"
                    app:checkedIconTint="@color/white"
                    app:chipCornerRadius="@dimen/margin_medium_x_12"
                    app:chipIcon="@drawable/ic_sugar"
                    app:chipIconTint="@color/color_coffee_brown"
                    app:chipStrokeColor="@color/white"
                    app:chipStrokeWidth="0.2dp"
                    tools:ignore="HardcodedText" />

            </com.google.android.material.chip.ChipGroup>

            <TextView
                android:id="@+id/tv_milk"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium_x_16"
                android:fontFamily="@font/poppins_bold"
                android:text="@string/milk"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/chip_group_sugar" />

            <androidx.cardview.widget.CardView
                android:id="@+id/spinner_milk_card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium_x_12"
                app:cardCornerRadius="@dimen/margin_medium_x_12"
                app:cardElevation="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_milk">

                <Spinner
                    android:id="@+id/spinner_milk"
                    style="@style/CustomDropDownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:popupElevation="4dp" />
            </androidx.cardview.widget.CardView>


            <TextView
                android:id="@+id/tv_toppings"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium_x_16"
                android:fontFamily="@font/poppins_bold"
                android:text="@string/toppings"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/spinner_milk_card_view" />

            <androidx.cardview.widget.CardView
                android:id="@+id/spinner_toppings_card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium_x_12"
                app:cardCornerRadius="@dimen/margin_medium_x_12"
                app:cardElevation="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_toppings">

                <Spinner
                    android:id="@+id/spinner_toppings"
                    style="@style/CustomDropDownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:popupElevation="4dp" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tv_special_instructions"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium_x_16"
                android:fontFamily="@font/poppins_bold"
                android:text="@string/special_instructions"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/spinner_toppings_card_view" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/text_input_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium_x_12"
                app:boxBackgroundColor="@color/white"
                app:hintEnabled="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_special_instructions">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_special_instructions"
                    android:layout_width="match_parent"
                    android:layout_height="86dp"
                    android:background="@drawable/shape_edt_background"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="top"
                    android:hint="@string/hint_special_instruction"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.core.widget.NestedScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottom_app_bar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="bottom"
        android:background="@color/white"
        android:elevation="4dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/btn_minus"
            android:layout_width="@dimen/margin_medium_x_24"
            android:layout_height="@dimen/margin_medium_x_24"
            android:layout_marginStart="@dimen/margin_medium_x_30"
            android:background="@color/color_coffee_brown"
            android:src="@drawable/ic_minus"
            android:tint="@color/white"
            app:layout_constraintBottom_toBottomOf="@id/btn_add_to_cart"
            app:layout_constraintEnd_toStartOf="@+id/tv_quantity"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/btn_add_to_cart"
            app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Full" />

        <TextView
            android:id="@+id/tv_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_medium_x_16"
            android:fontFamily="@font/poppins_regular"
            android:text="@string/quantity"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="4dp"
            app:layout_constraintBottom_toBottomOf="@id/btn_plus"
            app:layout_constraintEnd_toStartOf="@+id/btn_plus"
            app:layout_constraintStart_toEndOf="@+id/btn_minus"
            app:layout_constraintTop_toTopOf="@id/btn_plus" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/btn_plus"
            android:layout_width="@dimen/margin_medium_x_24"
            android:layout_height="@dimen/margin_medium_x_24"
            android:background="@color/color_coffee_brown"
            android:src="@drawable/ic_plus"
            android:tint="@color/white"
            app:layout_constraintBottom_toBottomOf="@id/btn_add_to_cart"
            app:layout_constraintEnd_toStartOf="@+id/btn_add_to_cart"
            app:layout_constraintStart_toEndOf="@+id/tv_quantity"
            app:layout_constraintTop_toTopOf="@id/btn_add_to_cart"
            app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Full" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_add_to_cart"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginHorizontal="@dimen/margin_medium_x_30"
            android:backgroundTint="@color/color_coffee_brown"
            android:fontFamily="@font/poppins_regular"
            android:text="@string/add_to_cart"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn_plus"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>