<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".feature.onboarding.ui.screen.SecondSlideFragment">

    <TextView
        android:id="@+id/tv_header_second_slide"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_medium_x_23"
        android:layout_marginTop="@dimen/margin_xxlarge"
        android:fontFamily="@font/poppins_bold"
        android:text="@string/second_slide_header"
        android:textColor="@color/color_onboarding_text"
        android:textSize="@dimen/text_heading_1x"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_second_slide"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/margin_medium_x_23"
        android:layout_marginTop="@dimen/margin_medium_x_30"
        android:src="@drawable/coffee_onboarding_second_slide"
        app:layout_constraintDimensionRatio="5:4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_header_second_slide" />

    <TextView
        android:id="@+id/tv_description_second_slide"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_medium_x_23"
        android:fontFamily="@font/poppins_regular"
        android:text="@string/onboarding_second_slide_description"
        android:textColor="@color/color_onboarding_text"
        android:textSize="@dimen/text_regular_2x"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>